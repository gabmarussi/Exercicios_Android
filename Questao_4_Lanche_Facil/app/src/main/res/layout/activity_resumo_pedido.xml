<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resumo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".ResumoPedidoActivity">

    <TextView
        android:id="@+id/textResumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgPedido"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pedido_concluido"
        android:contentDescription="Pedido feito"/>

    <Button
        android:id="@+id/btnNovoPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FaÃ§a um Novo Pedido"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:backgroundTint="@color/black"/>
</LinearLayout>
